# Main server block with explicit logging
server {
    listen 80;
    listen [::]:80;
    server_name rockwillow.duckdns.org localhost;
    
    # ✅ EXPLICIT LOG PATHS
    access_log /var/log/nginx/rockwillow-access.log;
    error_log /var/log/nginx/rockwillow-error.log;
    
    # HTTP to HTTPS redirect
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name rockwillow.duckdns.org localhost;
    
    # ✅ EXPLICIT LOG PATHS (can be different from HTTP)
    access_log /var/log/nginx/rockwillow-ssl-access.log;
    error_log /var/log/nginx/rockwillow-ssl-error.log;
    
    # SSL certificates
    ssl_certificate /etc/nginx/ssl/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/privkey.pem;
    
    # SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512;
    ssl_prefer_server_ciphers off;
    
    # Security headers
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains; preload";
    
    # Gin API - REST endpoints
    location /rwb_api/ {
        # ✅ Optional: Separate API logs
        access_log /var/log/nginx/api-access.log;
        
        proxy_pass http://rw_budget_api:8081/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Flask App - Web interface
    location /rw_budget/ {
        # ✅ Optional: Separate app logs
        access_log /var/log/nginx/app-access.log;
        
        proxy_pass http://rw_budget:5000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    # Health endpoint - disable logging
    location /health {
        access_log off;
        error_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
    
    # Static files - minimal logging
    location /static/ {
        access_log /var/log/nginx/static-access.log;
        alias /usr/share/nginx/html/static/;
        expires 1y;
    }
}